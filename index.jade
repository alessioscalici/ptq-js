  body.homepage
    #page-wrapper
      #header-wrapper
        header.container
          #logo
            h1
              a(href='index.html') ptq-js
            span the Javascript library for Ptq generated parsers
          nav#nav
            ul
              li
                a(href='report/coverage/src/index.html') Coverage
                a(href='report/complexity/index.html') Complexity
      #banner-wrapper
        #banner.box.container
          .row
            div(class='8u 12u(small)')
              span Write a simple arithmetic expression to see the parse tree (e.g. "5 + 2", "x * (9 - y)"...)
            div(class='4u 12u(small)')
              button.toggle-grammar-btn Show grammar
          .row.grammar.hidden
            div(class='6u 12u(medium)')
              pre -- main
                |     WHITESPACE  / [:space:]+  / -ignore

                |     PLUS        / \+ /
                |     MINUS       / - /
                |     MULT        / \* /
                |     DIV         / \/ /

                |     LEFT_PAR    / \( /
                |     RIGHT_PAR   / \) /

                |     NUMBER      / [0-9]+ /

                |     IDENTIFIER  / [a-zA-Z_][a-zA-Z_0-9]* /
            div(class='6u 12u(medium)')
              pre < expr > ::= < term > PLUS < expr >
              pre     | < term > MINUS < expr >
              pre     | < term >
              pre < term > ::= < factor > MULT < term >
              pre     | < factor > DIV < term >
              pre     | < factor >
              pre < factor > ::= LEFT_PAR < expr > RIGHT_PAR
              pre     | NUMBER
              pre     | IDENTIFIER


          #demo-expr.row.demo
            div(class='6u 12u(medium)')
              textarea.demo-input 5 + (2 * x)
            div(class='6u 12u(medium)')
              .demo-output




